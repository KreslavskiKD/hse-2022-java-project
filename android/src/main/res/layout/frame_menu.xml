<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:background="@color/our_black">

    <TextView
        android:id="@+id/game_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/fa_thin_100"
        android:minWidth="40dp"
        android:minHeight="35dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/join_public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/lime_700"
        android:fontFamily="@font/fa_light"
        android:paddingLeft="16dp"
        android:paddingTop="20dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:text="Join Public"
        android:textAllCaps="false"
        android:textColor="@color/our_black"
        android:textStyle="normal"
        tools:text="Join Public" />

    <Button
        android:id="@+id/join_private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/lime_700"
        android:fontFamily="@font/fa_light"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:text="Join Private"
        android:textAllCaps="false"
        android:textColor="@color/our_black"
        android:textStyle="normal"
        tools:text="Join Private" />

    <Button
        android:id="@+id/main_menu_quit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/lime_700"
        android:fontFamily="@font/fa_light"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:text="Quit"
        android:textAllCaps="false"
        android:textColor="@color/our_black"
        android:textStyle="normal"
        tools:text="Quit" />

</LinearLayout>
