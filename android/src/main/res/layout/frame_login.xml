<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:background="@color/our_black">

    <EditText
        android:id="@+id/login_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Login"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textVisiblePassword"
        android:lines="1"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/lime_500"
        android:textColorHint="@color/lime_200" />

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textPassword"
        android:lines="1"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/lime_700"
        android:textColorHint="@color/lime_200" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:fontFamily="@font/fa_light"
        android:textColor="@color/white"
        tools:text="Invalid Credentials" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:background="@color/our_black">

        <Button
            android:id="@+id/goto_reg_from_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="#D21979"
            android:fontFamily="@font/fa_light"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/our_black"
            android:textStyle="normal"
            tools:text="Register" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:background="#1976D2"
            android:fontFamily="@font/fa_light"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/our_black"
            android:textStyle="normal"
            tools:text="Login" />

        <Button
            android:id="@+id/quit_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="#F44336"
            android:fontFamily="@font/fa_light"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Quit"
            android:textAllCaps="false"
            android:textColor="@color/our_black"
            android:textStyle="normal"
            tools:text="Quit" />


    </RelativeLayout>


</LinearLayout>
