        android:icon="@mipmap/icon"
        android:isGame="true"
        android:label="Tick Game"
        android:roundIcon="@android:drawable/sym_def_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
